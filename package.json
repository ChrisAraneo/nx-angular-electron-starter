{
  "name": "nx-angular-electron-starter",
  "version": "0.0.0",
  "license": "MIT",
  "description": "",
  "keywords": [
    "Angular",
    "Electron",
    "Nx",
    "Starter",
    "Project"
  ],
  "main": "dist/apps/electron/src/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "postinstall:web": "node tools/builders/postinstall-web",
    "ng": "ng",
    "nx": "nx",
    "start": "npm-run-all -p ng:serve electron:serve",
    "ng:serve": "ng serve browser",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run build:electron && electron dist/apps/electron/src/main.js --serve",
    "electron:local": "npm run build:prod && electron dist/apps/electron/src/main.js",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "build": "npm run build:electron && ng build browser",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build:electron": "nx build electron",
    "test:web": "ng test browser",
    "test:electron": "ng test electron",
    "lint": "nx run-many -t lint",
    "e2e": "ng e2e",
    "doc:web": "npx compodoc -p apps/browser/tsconfig.app.json -d documentation/web --theme material -s -o",
    "doc:electron": "npx compodoc -p apps/electron/tsconfig.app.json -d documentation/electron --theme material -s -o",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "ng update @nrwl/workspace",
    "update:check": "ng update",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "help": "nx help"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/material": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@ngrx/store": "^21.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "lodash": "^4.17.23",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.1",
    "@angular-eslint/builder": "^19.0.1",
    "@angular-eslint/eslint-plugin": "^19.0.1",
    "@angular-eslint/eslint-plugin-template": "^19.0.1",
    "@angular-eslint/schematics": "^19.0.1",
    "@angular-eslint/template-parser": "^19.0.1",
    "@angular/cli": "^21.1.1",
    "@angular/language-service": "^21.1.1",
    "@chris.araneo/eslint-config": "0.0.94",
    "@compodoc/compodoc": "^1.2.1",
    "@nx/angular": "^22.0.0",
    "@nx/cypress": "^22.0.0",
    "@nx/eslint-plugin": "^22.4.1",
    "@nx/jest": "^22.0.0",
    "@nx/js": "^22.0.0",
    "@nx/node": "^22.0.0",
    "@nx/webpack": "^22.0.0",
    "@nx/workspace": "^22.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "core-js": "^3.48.0",
    "cypress": "^13.17.0",
    "dotenv": "^17.2.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.19.0",
    "jest": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "nx": "^22.0.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.0",
    "wait-on": "^9.0.3"
  }
}
